{
  "name": "orion-slack-agent",
  "version": "0.1.0",
  "description": "AI-powered Slack agent built with Anthropic API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docker:build": "docker build -f docker/Dockerfile -t orion-slack-agent .",
    "typecheck": "tsc --noEmit",
    "trace:test": "tsx src/observability/test-trace.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@langfuse/otel": "^4.5.1",
    "@langfuse/tracing": "^4.5.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@slack/bolt": "^4.6.0",
    "@slack/web-api": "^7.13.0",
    "dotenv": "^16.4.7",
    "langfuse": "^3.38.6",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@eslint/js": "8.57.1",
    "@types/node": "^20.17.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "1.6.1",
    "eslint": "^8.57.1",
    "eslint-plugin-filenames": "1.3.2",
    "memfs": "^4.51.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
